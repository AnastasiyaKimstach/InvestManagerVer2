@model List<InvestManagerVer2.Web.Models.CategoryViewModel>
@{
    ViewData["Title"] = "Index";
}
    <form>
    <br />
    <button asp-action="Create" asp-controller="Admin" class="btn btn-primary">Create category</button>
    <br /><br />
    <table class="table table-light" style="border-radius:5px; overflow: hidden;">
            <thead>
                <tr class="table-active">
                    <th>CategoryName</th>
                <th></th>
                </tr>

            </thead>
            <tbody>
            @if(Model != null && Model.Any())
            {
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @category.CategoryName
                        </td>
                        <td style="text-align:right;">
                            <div class="bttn-group btn-gr">
                                <button style="margin-right:10px" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-primary" >Delete</button>
                            </div>
                        </td>
                    </tr>
                    
                }
            }
            else
            {
                <tr>
                    <td>
                        <div>
                            No Categories avaliable at this moment!
                        </div>
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </form>
