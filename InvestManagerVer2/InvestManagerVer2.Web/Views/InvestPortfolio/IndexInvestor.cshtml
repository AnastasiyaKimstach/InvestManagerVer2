@model List<InvestManagerVer2.Web.Models.CategoryViewModel>
@{
    ViewData["Title"] = "Index";
}

<header class="bk_header">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">InvestManager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="IndexInvestor" asp-controller="IndexInvestor">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Investor" asp-controller="Account">Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="InvestPortfolio" asp-controller="Home">Assets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="InvestPortfolio" asp-controller="Transactions">Transaction</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="InvestPortfolio" asp-controller="Home">Statistics</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<form>
    <br />
    <br /><br />
    <table class="table table-light">
        <thead>
            <tr class="table-active">
                <th>CategoryName</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @category.CategoryName
                        </td>
                    </tr>
                }
            }
            else
            {
            <tr>
                <td>
                    <div>
                        No Categories avaliable at this moment!
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</form>