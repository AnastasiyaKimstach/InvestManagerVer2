@model List<InvestManagerVer2.Web.Models.CategoryViewModel>
<link href="~/css/custom.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Index";
}
<form>
    <br />
    <div class="page-wrapper">
        <div class="page-content">
            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4">

                <div class="col" style="width:660px;">
                    <div class="card radius-10 border-start border-0 border-4 border-info">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div>
                                    <p class="mb-0 text-secondary">Cost</p>
                                    <h4 class="my-1 text-info">4805</h4>
                                    <p class="mb-0 font-13">+2.5% from last week</p>
                                </div>
                                <div class="widgets-icons-2 rounded-circle bg-gradient-blues text-white ms-auto">
                                    <i class='bx bxs-cart'></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col" style="width:660px;">
                    <div class="card radius-10 border-start border-0 border-4 border-success">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div>
                                    <p class="mb-0 text-secondary">Profitability</p>
                                    <h4 class="my-1 text-success">34.6%</h4>
                                    <p class="mb-0 font-13">-4.5% from last week</p>
                                </div>
                                <div class="widgets-icons-2 rounded-circle bg-gradient-ohhappiness text-white ms-auto">
                                    <i class='bx bxs-bar-chart-alt-2'></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <br />
    <table class="table table-light" style="border-radius:5px; overflow: hidden;">
        <thead>
            <tr class="table-active">
                <th>CategoryName</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @category.CategoryName
                        </td>
                    </tr>
                }
            }
            else
            {
            <tr>
                <td>
                    <div>
                        No Categories avaliable at this moment!
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</form>